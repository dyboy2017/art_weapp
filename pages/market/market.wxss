/* pages/market/market.wxss */
.market_box{
  background-color: #efeff4;
}


.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 0px 12px 35px;
}

.goods_box{
  width: 100%;
  overflow: hidden;
}
.good_box{
  width: 48%;
  float: left;
  height: 420rpx;
  background-color: #fff;
  border: 8rpx solid #efeff4; 
  border-radius: 5px;
  margin: 8px 0px;
}
.good_box image{
  width: 100%;
  height: 300rpx;
}
.good_title{
  padding-left: 5rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.good_price{
  padding-left: 5rpx;
  float: left;
  font-size: 22rpx;
}
.price{
  color: red;
  font-weight: bold;
}
.good_view{
  float: right;
  font-size: 22rpx;
  padding-right: 4rpx;
}

