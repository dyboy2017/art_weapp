/* pages/article/article.wxss */

.header{
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}
.au_info{
  font-size: 20rpx;
}
.au_info text{
  padding: 5rpx 5rpx;
}

/* //文章 */
.body{
  width: 95%;
  padding:8rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ccc;
  padding-bottom: 50rpx;
  margin: 4rpx auto;
}
.body image{
  margin: 5rpx auto;
  padding: 5rpx;
  box-shadow: 4rpx 4rpx 3rpx #ccc;
  text-align: center;
  display: block;
  width: 80%;
}
.more{
  padding: 5rpx;
  text-align: center;
  margin-bottom: 25rpx;
  margin-top: 15rpx;
}
.more .like{
  margin: 0px auto;
  width: 250rpx;
  padding: 25rpx 10rpx;
  background-color: #EA6F5A;
  color: #fff;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  font-size: 28rpx;
}

.comment{
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  padding: 15rpx;
}
.comment_box{
  font-size: 24rpx;
  overflow: hidden;
  padding-bottom: 25rpx;
  border-bottom: 1px dotted #ccc;
}
.comment_box image{
  float: left;
  width: 90rpx;
  height: 90rpx;
  border-radius: 100px;
  border:1px solid #ccc;
}
.comment_box .speaker{
  position: relative;
  /* padding: 15rpx 0rpx; */
  top: 5rpx;
  left: 15rpx;
  color: #EA6F5A;
  font-size: 28rpx;
  font-weight: bold;
}
.comment_box .content{
  padding-left: 15rpx;
  width: 60%;
}
.comment_box .c_time{
  float: right;
  /* font-size: 18rpx; */
  color: #ccc;
}

/*购买按钮  */
.btn_buy{
  position: fixed;
  bottom: 150rpx;
  right: 5rpx;
  background: #EA6F5A;
  color: #fff;
  padding: 10rpx 25rpx;
  border-radius: 23%;
}