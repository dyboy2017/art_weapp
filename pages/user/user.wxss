/* pages/user/user.wxss */
.user_box{
  background-color: #efefef;
  height: 1150rpx;
}

.user_top_box{
  display: flex;
  flex-direction: column;
  height: 250rpx;
  width:100%;
  background-color: #e8989a;
  text-align: center;
}
.user_info_avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 20rpx auto;
}
.user_nickname{
  color: #fff;
}
.panel{
  margin-top: 0rpx;
}
.right_title{
  float: right;
}
.weui-panel__bd{
  overflow: hidden;
  width: 100%;
}
.item_icon{
  float: left;
  width: 20%;
  text-align: center;
  padding-top: 20rpx;
}
.item_icon image{
  width: 50rpx;
  height: 50rpx;
  display: block; 
  margin: 2px auto;
 }
 .item_icon text{
  color: #ccc;
  font-size: 18rpx;
  position: relative;
  top: -25rpx;
 }

 /*地址管理  */
 .margin_top_25px{
   margin-top: 25rpx;
 }
 .title_big{
   /* font-size: 18rpx; */
   padding: 20rpx 0rpx 20rpx 25rpx;
 }
 .padding_right_25px{
   padding-right: 25rpx;
 }

/*菜单 menu  */
.item_icon2{
  float: left;
  width: 25%;
  text-align: center;
  padding-top: 20rpx;
}
.item_icon2 image{
  width: 60rpx;
  height: 60rpx;
  display: block; 
  margin: 2px auto;
 }
 .item_icon2 text{
  color: #ccc;
  font-size: 24rpx;
  position: relative;
  top: -20rpx;
 }
